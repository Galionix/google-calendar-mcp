{
  "name": "@tasks/mcp-google-calendar",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mcp-servers/google-calendar/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn build",
        "cwd": "apps/mcp-servers/google-calendar"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "node dist/index.js",
        "cwd": "apps/mcp-servers/google-calendar"
      },
      "configurations": {
        "development": {
          "command": "node dist/index.js --transport stdio",
          "cwd": "apps/mcp-servers/google-calendar"
        },
        "http": {
          "command": "node dist/index.js --transport http --port 3001",
          "cwd": "apps/mcp-servers/google-calendar"
        }
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/dev.js http",
        "cwd": "apps/mcp-servers/google-calendar"
      }
    },
    "auth": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/index.js auth",
        "cwd": "apps/mcp-servers/google-calendar"
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn install",
        "cwd": "apps/mcp-servers/google-calendar"
      }
    }
  },
  "tags": ["type:application", "scope:mcp", "service:google-calendar"]
}
